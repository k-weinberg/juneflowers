---
import Navigation from "../components/Navigation.astro";
import { SkipLinks } from "accessible-astro-components";
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Flowers</button>
      <ul class="dropdown-menu">
        <li>
          <a class="submenu-item" href="/dropdown/subpage1/"
            >Summer Flower Share</a
          >
        </li>
        <li>
          <a class="submenu-item" href="/dropdown/subpage2/">Wholesale</a>
        </li>
        <li>
          <a class="submenu-item" href="/dropdown/subpage3/"
            >Events + Custom Orders</a
          >
        </li>
      </ul>
    </li><li class="menu-item">
      <a href="/blog/">About</a>
    </li>
    <li class="menu-item">
      <a href="/example-page/">Contact</a>
    </li>
  </Navigation>
</header>

<style lang="scss">
  @use "../assets/scss/base/breakpoint" as *;

  li button {
    font-family: courier;
    position: relative;
    top: 0.2em;
  }

  .dropdown-menu {
    background-color: hsl(38, 94%, 68%);
  }

  .container {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;

    @include breakpoint(medium) {
      flex-wrap: nowrap;
    }

    img {
      max-height: 40px;
    }
  }
  .hover-item:after {
    content: "";
    position: absolute;
    width: 100%;
    transform: scaleX(0);
    height: 2px;
    bottom: 0;
    left: 0;
    background-color: #0087ca;
    transform-origin: bottom right;
    transition: transform 0.25s ease-out;
  }

  .submenu-item {
    transition: 0.2s;
    text-decoration: underline;
    text-decoration-color: transparent;
  }

  .submenu-item:hover {
    transition: 0.6s;
    text-decoration-color: black;
  }
</style>
